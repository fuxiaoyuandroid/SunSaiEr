<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    tools:context="com.tcoj.theconnotationofjokes.MainActivity">

    <TextView
        android:id="@+id/ss_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/main_text_color"
        android:text="损色儿,损色儿,损色儿" />
    <!--<ImageView
        android:id="@+id/ss_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/ss_tv"
        android:src="@mipmap/sunsai"/>-->
    <Button
        android:id="@+id/jump_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转页面"
        android:textSize="18sp"
        android:background="@color/main_bg_color"
        android:textColor="@color/main_text_color"/>
    <Button
        android:id="@+id/ss_change_skin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/main_text_color"
        android:text="损色儿换肤"/>
    <ImageView
        android:id="@+id/ss_change_skin_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/skin"/>

    <Button
        android:id="@+id/give_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恢复默认"
        android:textSize="18sp"
        android:textColor="@color/main_text_color"/>
</LinearLayout>
